# ============================================================
# LOCAL DEVELOPMENT (defaults — works out of the box)
# ============================================================
LOCAL_DEV=true
OPENAI_API_KEY=sk-...
DATABASE_URL=sqlite+aiosqlite:///./ernesto.db
CORS_ORIGINS=http://localhost:5173,http://localhost:8081

# ============================================================
# AUTH — AWS Cognito (production only, ignored when LOCAL_DEV=true)
# ============================================================
AWS_REGION=us-east-1
COGNITO_USER_POOL_ID=
COGNITO_APP_CLIENT_ID=

# ============================================================
# STORAGE — S3 (production only, falls back to ./uploads/ if empty)
# ============================================================
S3_BUCKET=
CLOUDFRONT_DOMAIN=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ============================================================
# REAL-TIME — Redis (production only, falls back to in-memory if empty)
# ============================================================
REDIS_URL=

# ============================================================
# DATABASE — PostgreSQL (production only, falls back to SQLite if empty)
# ============================================================
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/ernesto

# ============================================================
# ENCRYPTION — for platform credentials at rest
# ============================================================
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_KEY=

# ============================================================
# eBay API (https://developer.ebay.com)
# ============================================================
EBAY_APP_ID=
EBAY_CERT_ID=
EBAY_DEV_ID=
EBAY_USER_TOKEN=
EBAY_SANDBOX=true

# ============================================================
# Telegram notifications (optional)
# ============================================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ============================================================
# App
# ============================================================
SECRET_KEY=change-me-in-production
